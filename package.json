{
  "name": "kanousei-wp-to-next-free",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*",
    "workers/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "vitest",
    "full": "tsx scripts/run.ts",
    "worker:login": "wrangler login",
    "worker:kv": "wrangler kv namespace create KV",
    "worker:r2": "wrangler r2 bucket create clone-staging",
    "worker:deploy": "wrangler deploy --config infra/cloudflare/wrangler.toml",
    "scout:start": "node -e \"fetch(process.env.SCOUT_WORKER_URL+'/scout/start',{method:'POST',headers:{'content-type':'application/json'},body:JSON.stringify({url:process.env.TARGET_URL})}).then(r=>r.text()).then(t=>console.log(t)).catch(e=>{console.error(e);process.exit(1)})\"",
    "scout:step": "node -e \"(async()=>{const u=process.env.SCOUT_WORKER_URL;const s=process.env.SITE_ID;const r=await fetch(u+'/scout/step',{method:'POST',headers:{'content-type':'application/json'},body:JSON.stringify({siteId:s,limit:10})});console.log(await r.text())})().catch(e=>{console.error(e);process.exit(1)})\""
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "tsx": "4.19.1",
    "turbo": "2.1.3",
    "typescript": "5.6.3",
    "vitest": "^1.3.2",
    "wrangler": "4.45.2"
  }
}
