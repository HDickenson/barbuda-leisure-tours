# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env.local for local development
# DO NOT commit actual .env files to git
# Use Vercel dashboard or CLI to set production variables

# ============================================
# VERCEL DEPLOYMENT
# ============================================
# Vercel OIDC Token (created automatically by Vercel CLI)
# ⚠️ NEVER set manually - generated by `vercel` command
# ⚠️ DO NOT commit to git - already in .gitignore
# VERCEL_OIDC_TOKEN=

# ============================================
# SANITY CMS
# ============================================
# Get these from https://sanity.io/manage after creating a project

# Project ID (required)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here

# Dataset name (required)
NEXT_PUBLIC_SANITY_DATASET=production

# API Version (required)
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# API Token for write operations (required for migrations and Studio)
# Create at: https://sanity.io/manage → Your Project → API → Tokens
# Permissions: Editor or higher
SANITY_API_TOKEN=your_sanity_token_here

# Secret key for on-demand revalidation (create a random string)
REVALIDATE_SECRET=your_random_secret_key_here

# ============================================
# EMAIL NOTIFICATIONS (for booking API)
# ============================================
# SMTP server configuration for sending booking emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Email address to receive booking notifications
BOOKING_EMAIL=bookings@barbudaleisuretours.com

# ============================================
# ANALYTICS (optional)
# ============================================
# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel ID
# NEXT_PUBLIC_FB_PIXEL_ID=

# ============================================
# DEVELOPMENT
# ============================================
# Set to 'development' for local dev, 'production' for live site
NODE_ENV=development

# Next.js build output
# NEXT_PUBLIC_BASE_URL=http://localhost:3000
